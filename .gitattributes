# Normalize all text files to LF in the repository
* text=auto eol=lf

# Explicitly normalize C++ source and headers (ensures LF everywhere)
*.c     text eol=lf
*.cpp   text eol=lf
*.cc    text eol=lf
*.cxx   text eol=lf
*.h     text eol=lf
*.hpp   text eol=lf
*.hxx   text eol=lf
*.inc   text eol=lf
*.def   text eol=lf
*.inl   text eol=lf

# CMake and build scripts
CMakeLists.txt    text eol=lf
*.cmake           text eol=lf
*.cmake.in        text eol=lf
configure         text eol=lf
*.sh              text eol=lf

# Windows-specific project files: use CRLF in working tree (for VS compatibility)
*.sln             text eol=crlf
*.vcxproj         text eol=crlf
*.vcxproj.filters text eol=crlf
*.props           text eol=crlf
*.targets         text eol=crlf

# Scripts
*.bat             text eol=crlf
*.cmd             text eol=crlf
*.ps1             text eol=crlf

# Documentation
*.md              text eol=lf
*.txt             text eol=lf
README*           text eol=lf
LICENSE           text eol=lf
.gitignore        text eol=lf

# Binary files (prevent Git from treating them as text)
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.ico   binary
*.exe   binary
*.dll   binary
*.so    binary
*.a     binary
*.lib   binary
*.pdb   binary
*.obj   binary
*.o     binary
*.pcm   binary
*.res   binary
*.ico   binary
*.zip   binary
*.tar   binary
*.gz    binary
